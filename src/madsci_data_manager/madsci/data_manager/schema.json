{
    "database": "madsci_data",
    "schema_version": "1.0.0",
    "description": "Schema definition for MADSci Data Manager MongoDB",
    "collections": {
      "datapoints": {
        "description": "Main datapoints collection for storing all data references and metadata",
        "indexes": [
          {
            "keys": [["datapoint_id", 1]],
            "name": "datapoint_id_1",
            "background": true,
            "unique": true,
            "description": "Unique constraint on datapoint_id for fast lookups"
          }
        ]
      },
      "schema_versions": {
        "description": "Version tracking for schema migrations",
        "indexes": [
          {
            "keys": [["version", 1]],
            "name": "version_unique",
            "unique": true,
            "description": "Unique constraint on version strings"
          },
          {
            "keys": [["applied_at", -1]],
            "name": "applied_at_desc",
            "description": "Index for chronological version tracking"
          }
        ]
      }
    }
  }
